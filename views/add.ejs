<%- include ./common/header.ejs  %>

<div class="container">
    <div class="row">
        <div class="col-sm-10" style="margin-top:50px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    添加日记
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="http://localhost:4000/add" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>请输入头像: <input type="text" name="title" /></li>

                                <li> 请上传头像: <input type="file" name="pic" /></li>
                                <li> 请输入时间: <input type="text" name="price" /></li>
                                <li> 请输入地点: <input type="text" name="fee" /></li>

                                <li>
                                    日志本:
                                    <textarea name="description" id="" cols="60" rows="8"></textarea>
                                </li>
                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

