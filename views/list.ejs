<%- include ./common/header.ejs  %>
<h1 style="text-shadow: 5px 5px 5px rgb(0, 119, 255);" align="center">家庭记事本</h1>
<div class="container-fluid">
    <div class="col-sm-10 col-sm-offset-1" style="margin-top:50px;">
        <button type="button" class="btn btn-default btn-sm" onclick="location.href='http://localhost:4000/login'">
            <span class="glyphicon glyphicon-remove"></span> 点击退出
          </button>
        <div class="panel panel-default">

            <div class="panel-body">
                <form role="form" class="form-inline">
                    <div class="form-group">
                        <label for="name">名称</label>
                        <input type="text" class="form-control" id="name" placeholder="请输入名称">
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-warning btn-sm">
                            搜索
                          </button>
                        <button type="button" class="btn btn-info btn-sm" onclick="location.href='http://localhost:4000/add'">
                            添加
                          </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>相片</th>
                        <th>姓名</th>
                        <th>时间</th>
                        <th>创建的时间</th>
                        <th>修改的时间</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(var i=0;i<arr.length;i++){  %>
                    <tr>
                        <td><%=i+1%></td>
                        <td><img src="<%=arr[i].pic%>" style="width:30px;" class="img-circle"></td>
                        <td><%=arr[i].title%></td>
                        <td><%=arr[i].price%></td>
                        <td><%=moment(arr[i].createAt).format('YYYY/MM/DD HH:mm:ss')%></td>
                        <td><%=moment(arr[i].updateAt).format('YYYY/MM/DD HH:mm:ss')%></td>
                        <td class="text-center">
                            <a href="/product/update/<%=arr[i].id%>" class="btn btn-success">编辑</a>
                            <a href="/product/delete/<%=arr[i].id%>?img=<%=arr[i].pic%>" class="btn btn-danger">删除</a>
                        </td>
                    </tr>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

<%- include  ./common/footer.ejs  %>